@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipes.css">
<main>
    @if (ViewBag.UserName == null)
    {
        <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
    }
    else
    {


        <section class="container-grid cadastro-equipes">
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                <input class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" name="Nome" required>
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="file" id="foto-file" name="Imagem">
                </label>

                <button>Cadastro</button>
            </form>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Foto</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <tr>
                            <td>@equipe.IdEquipe</td>
                            <td>@equipe.Nome</td>
                            <td>
                                <img class="green-play" src="/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Nome"
                                    width="50px">
                            </td>
                            <td>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Equipe" asp-action="Excluir"
                                    asp-route-id="@equipe.IdEquipe">
                                    <img class="yellow-trash" src="~/assets/trash.png" alt="">
                                </a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Equipe" asp-action="Editar"
                                    asp-route-id="@equipe.IdEquipe">
                                    <img class="yellow-pencil" src="~/assets/pencil.svg" alt="">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    }
</main>