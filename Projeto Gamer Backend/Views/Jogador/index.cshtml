@model Jogador

@{
    ViewData["Title"] = "Tela de Jogadores";
}

<link rel="stylesheet" href="~/css/jogadores.css">


<h1>Tela de jogadores</h1>

@if (ViewBag.UserName == null)
{
    <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <form action="" class="frm-cad-equipe">
        <div class="cadequipe-titulo">
            <h1>Cadastro de Jogadores</h1>
            <hr>
        </div>

        <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:">
        <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:">

        <select class="campo-entrada" id="equipe-select">
            <option value="">Selecione uma Equipe</option>
            <option value="x">Equipe X</option>
            <option value="y">Equipe Y</option>
        </select>

        <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:">
        <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:">
        <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:">
        <button>Cadastrar</button>




    </form>

    <!-- TABELA CADASTRO DE EQUIPES -->

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Jogador jogador in ViewBag.Jogador)
            {
                <tr>
                    <td>@jogador.IdJogador</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td>
                        <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="" width="80px">
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Jogador" asp-action="Excluir"
                            asp-route-id="@jogador.IdJogador">Excluir</a>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Jogador" asp-action="Editar"
                            asp-route-id="@jogador.IdJogador">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

        <label for="">Nome</label>
        <input type="text" name="Nome" required>

        <label for="">Email</label>
        <input type="Email" name="Email" required>

        <label for="">Senha</label>
        <input type="Password" name="Senha" required>

        <label for="">Equipe</label>
        <select name="Equipe" id="" required>
            <option value="0">Selecione uma opção</option>
            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }
        </select>

        <button type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Imagem Equipe</th>
            <th>Ações</th>
        </thead>

        <tbody>
            @foreach (Jogador jogador in ViewBag.Jogador)
            {
                <tr>
                    <td>@jogador.IdJogador</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td>
                        <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="" width="80px">
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Jogador" asp-action="Excluir"
                            asp-route-id="@jogador.IdJogador">Excluir</a>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Jogador" asp-action="Editar"
                            asp-route-id="@jogador.IdJogador">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}